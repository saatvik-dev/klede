{
  "version": 2,
  "buildCommand": "./build-for-vercel.sh",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.ts" 
    },
    { 
      "handle": "filesystem" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/api/index.ts" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}